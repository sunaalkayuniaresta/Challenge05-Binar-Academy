<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Car FSW 9</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="../css/style.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
    />
  </head>
  <body id="body-pd">
    <!-- Navbar -->
    <header class="header navbar navbar-expand-md pe-0" id="header">
      <div class="d-flex me-auto header_toggle">
        <i class="bi bi-list mx-4" id="header-toggle"></i>
      </div>
      <form class="d-flex ms-auto" method="post" action="/search">
        <input
          class="form-control"
          type="search"
          placeholder="Search"
          value=""
          aria-label="Search"
          name="search"
        />
        <button class="btn btn-outline-primary btn-search" type="submit">
          Search
        </button>
      </form>
      <div class="btn-group ms-2 user-setting">
        <button
          type="button"
          class="btn dropdown-toggle"
          data-bs-toggle="dropdown"
          data-bs-display="static"
          aria-expanded="false"
        >
          <img
            src="../images/Rectangle 62.png"
            class="rounded-circle"
            alt=""
            style="width: 38px; height: 38px; object-fit: cover"
          />
          Unis Badri
        </button>
        <ul class="dropdown-menu dropdown-menu-sm-end">
          <li>
            <button class="dropdown-item" type="button">Setting</button>
          </li>
          <li>
            <button class="dropdown-item" type="button">Logout</button>
          </li>
        </ul>
      </div>
    </header>
    <!-- Sidebar -->
    <div class="l-navbar" id="nav-bar">
      <nav class="nav">
        <table class="h-100">
          <tr>
            <td style="vertical-align: top; width: 60px; padding: 0px">
              <img class="nav_logo" src="../images/Rectangle 63.png" />
              <a href="/" class="nav_link"
                ><img src="../images/Home.png" alt=""
              /></a>
              <a href="/cars" class="nav_link active-menu"
                ><img src="../images/Administrator.png" alt=""
              /></a>
            </td>
            <td
              style="
                vertical-align: top;
                background-color: #ffffff;
                padding: 0px;
              "
            >
              <img class="nav_logo" src="../images/Rectangle 62.png" />
              <p class="nav_title" style="margin-top: 17px">CARS</p>
              <a href="/cars" class="nav_title text-black bg-color-1">List Car</a>
            </td>
          </tr>
        </table>
      </nav>
    </div>
    <!-- Container Main -->
    <div class="h-100 mx-4">
      <!-- Breadcrumb -->
      <nav style="--bs-breadcrumb-divider: '>'" aria-label="breadcrumb">
        <ol class="breadcrumb pt-3">
          <li class="breadcrumb-item">
            <a class="fw-bold text-black text-decoration-none">Cars</a>
          </li>
          <li class="breadcrumb-item active">List Car</li>
          <li class="breadcrumb-item active">Update Car</li>
        </ol>
      </nav>
      <!-- Title Content -->
      <div class="pt-2 d-flex justify-content-between">
        <h4 class="h4 fw-bold">Add New Car</h4>
      </div>
      <div class="w-100 bg-light px-5 py-3 rounded-3">
        <form method="POST" enctype="multipart/form-data" action="/cars/create" class="w-50 px-5 my-auto m-5">
          <div class="mb-3">
            <label for="namaMobil" class="form-label">Nama</label>
            <input
              type="text"
              class="form-control"
              name="name"
              id="namaMobil"
              placeholder="Input Nama Mobil"
            />
          </div>
          <div class="mb-3">
            <label for="hargaSewa" class="form-label">Sewa Per Hari</label>
            <input
              type="number"
              class="form-control"
              id="hargaSewa"
              name="price"
              placeholder="Rp. 0,-"
            />
          </div>
          <div class="mb-3">
            <label for="ukuranMobil" class="form-label">Ukuran</label>
            <select class="form-select" name="type" id="ukuranMobil">
              <option value="small">Small</option>
              <option value="medium">Medium</option>
              <option value="large">Large</option>
            </select>
          </div>

          <div class="mb-3">
            <label for="formFileSm" class="form-label">Pilih Foto</label>
            <input
              class="form-control form-control-sm"
              id="formFileSm"
              name="image"
              type="file"
            />
          </div>
          <div class="mb-3">
            <a type="button" class="btn btn-outline-danger" onclick="history.back()"><i class="bi bi-backspace-fill p-1"></i>Cancel</a>
            <button type="submit" class="btn btn-primary" value="Create Car"><i class="bi bi-upload p-1"></i> Create</button>
          </div>
        </form>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
